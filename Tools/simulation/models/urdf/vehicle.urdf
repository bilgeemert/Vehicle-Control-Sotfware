<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="vehicle">
    
    <link name="base_footprint" />

    <link name="base_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0"
                     iyy="0.4" iyz="0.0"
                     izz="0.2"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.95 0.50 0.2" />
            </geometry>
            <material name="dark_gray">
                <color rgba="0.2 0.2 0.2 1.0" />
                <texture filename="" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="1.0 0.50 0.25" />
            </geometry>
            <contact_coefficients mu="1" mu2="1" kp="1e+13.0" kd="1.0" />
        </collision>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin rpy="0 0 0" xyz="0 0 0" />
    </joint>


    <xacro:macro name="wheel" params="name x y">
        <link name="wheel_${name}_link">
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="1.57 1.57 0.0" />
                <mass value="0.5" />
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
            </inertial>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="1.57 1.57 0.0" />
                <geometry>
                    <cylinder radius="0.2" length="0.1" />
                </geometry>
                <material name="black">
                    <color rgba="0.0 0.0 0.0 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="1.57 1.57 0.0" />
                <geometry>
                    <cylinder radius="0.2" length="0.1" />
                </geometry>
            </collision>
        </link>
    
        <joint name="wheel_${name}_joint" type="continuous">
            <origin xyz="${x} ${y} 0.0" rpy="0 0.0 0.0" />
            <parent link="base_link" />
            <child link="wheel_${name}_link" />
            <axis xyz="0.0 0.0 1.0" />
        </joint>
    </xacro:macro>
    
    <xacro:wheel name="rear_right" x="0.250" y="0.40" />
    <xacro:wheel name="front_right" x="-0.250" y="0.40" />
    <xacro:wheel name="front_left" x="-0.250" y="-0.40" />
    <xacro:wheel name="rear_left" x="0.250" y="-0.40" />
    
</robot>